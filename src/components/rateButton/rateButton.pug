//
  options.block - блок, к которому принадлежит переключатель
  options.class
mixin rateButton(options)
  div(class = options.class)
    input(class = "rateInput" type = "radio" id = "star-1" name = "ratingStars")
    label(title="5" for = "star-1") 
      span(class = 'material-icons-outlined ' + options.block+'__star' id = "1") grade
    input(class = "rateInput" type = "radio" id = "star-2" name = "ratingStars")
    label(title="4" for = "star-2") 
      span(class = 'material-icons-outlined ' + options.block+'__star' id = "2") grade
    input(class = "rateInput" type = "radio" id = "star-3" name = "ratingStars")
    label(title="3" for = "star-3") 
      span(class = 'material-icons-outlined ' + options.block+'__star' id = "3") grade
    input(class = "rateInput" type = "radio" id = "star-4" name = "ratingStars")
    label(title="2" for = "star-4") 
      span(class = 'material-icons-outlined ' + options.block+'__star' id = "4") grade
    input(class = "rateInput" type = "radio" id = "star-5" name = "ratingStars")
    label(title="1" for = "star-5") 
      span(class = 'material-icons-outlined ' + options.block+'__star' id = "5") grade
  