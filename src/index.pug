doctype html
html(lang="ru")
    head
        // ...
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width")
        title Toxin - бронирование номеров
        link(rel="stylesheet", href="./styles.scss")
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    body
        header
            +logo
            .head__menuWrapper
                a О нас
                a Услуги
                a Вакансии
                a Новости
                a Соглашения
                .head__btnWrapper
                    +btn({title: "Войти", isActive: true, isColored: false, block: "head"})
